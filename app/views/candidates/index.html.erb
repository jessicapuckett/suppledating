<h1>Listing Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= image_tag candidate.image.url(:medium) %></td>
        <td><%= candidate.name %></td>
        <td><%= candidate.user.email if candidate.user %></td>
        <% if candidate.user == current_user %>
          <td><%= link_to 'Show', candidate %></td>
          <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
          <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Candidate', new_candidate_path %>
<% end %>
